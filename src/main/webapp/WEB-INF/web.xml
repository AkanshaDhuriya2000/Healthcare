<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Healthcare</display-name>
	<welcome-file-list>
		<welcome-file>pages/login.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.Controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>registration</servlet-name>
		<servlet-class>com.Controller.RegistrationFormController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>com.Controller.UserRegistrationController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>user</servlet-name>
		<servlet-class>com.Controller.UserListController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/users</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>dashboard</servlet-name>
		<servlet-class>com.Controller.MainDashboardController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dashboard</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>fetchuser</servlet-name>
		<servlet-class>com.Controller.UserDetailsController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>fetchuser</servlet-name>
		<url-pattern>/fetchuser</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updateuser</servlet-name>
		<servlet-class>com.Controller.UpdateUserController</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>updateuser</servlet-name>
		<url-pattern>/updateuser</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>redirectlogin</servlet-name>
		<servlet-class>com.Controller.RedirectLoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>redirectlogin</servlet-name>
		<url-pattern>/redirectlogin</url-pattern>
	</servlet-mapping>

</web-app>